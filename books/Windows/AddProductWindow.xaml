<Window x:Class="books.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Добавление товара" MinHeight="450" MinWidth="800">
    <Grid  Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox>
            <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D1E8E2">Добавление товара</TextBlock>
        </Viewbox>

        <Viewbox Margin="20" Grid.Row="1">
            <StackPanel Background="#2C3531">
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Название</TextBlock>
                <TextBox Name="nameInputTextBox" FontSize="14" Height="20" Width="500"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Тип товара</TextBlock>
                <ComboBox Name="typeInputComboBox" FontSize="14" Height="30" Width="250"></ComboBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Цена продажи</TextBlock>
                <TextBox Name="salePriceInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Цена поставщика</TextBlock>
                <TextBox Name="providerPriceInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <Button Name="AddProductButton" Height="50" Width="250" FontSize="14" Margin="0 20 0 0" Click="AddProductButton_Click"  Background="#5CDB95">
                    <TextBlock FontSize="20">Добавить товар</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
