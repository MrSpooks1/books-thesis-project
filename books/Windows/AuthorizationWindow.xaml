<Window x:Class="books.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="450" MinWidth="800">
    <Grid Background="#2C3531">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1" VerticalAlignment="Center" MaxWidth="400">
            <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D1E8E2">Авторизация</TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="1">
            <StackPanel Margin="10" Background="#2C3531" MinWidth="270">
                <TextBlock TextAlignment="Center" FontSize="14" Foreground="#D1E8E2">Логин</TextBlock>
                <TextBox Name="loginInputTextBox" MinWidth="250" MaxWidth="600" Height="30" FontSize="14" Margin="10 0 10 10"></TextBox>
                <TextBlock TextAlignment="Center" FontSize="14" Foreground="#D1E8E2">Пароль</TextBlock>
                <PasswordBox Name="passwordInputTextBox" MinWidth="250" MaxWidth="600" Height="30" FontSize="14" Margin="10 0 10 10" ></PasswordBox>
                <Button Name="loginButton" Width="200" Height="50" FontSize="14" Margin="20" Click="loginButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="20">Войти</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
