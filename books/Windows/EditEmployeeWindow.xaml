<Window x:Class="books.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Изменение информации о сотруднике" MinHeight="450" MinWidth="800">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="500">
            <TextBlock FontSize="20" Foreground="#D1E8E2" HorizontalAlignment="Center" VerticalAlignment="Center">Изменение информации о сотруднике</TextBlock>
        </Viewbox>
        <Viewbox  Grid.Row="1" Margin="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 10 0 20" Foreground="#D1E8E2">ФИО</TextBlock>
                <TextBox Name="fullNameInputTextBox" FontSize="14" Height="20" Width="500"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Должность</TextBlock>
                <ComboBox Name="positionInputComboBox" FontSize="14" Height="30" Width="250">
                    <ComboBoxItem>Продавец-кассир</ComboBoxItem>
                    <ComboBoxItem>Старший продавец</ComboBoxItem>
                    <ComboBoxItem>Администратор</ComboBoxItem>
                </ComboBox>
                <StackPanel>
                    <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Номер телефона</TextBlock>
                    <TextBox Name="phoneNumberInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                    <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Серия номер паспорта</TextBlock>
                    <TextBox Name="passportInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                </StackPanel>
                <Button Name="EditEmployeeButton" Height="50" Width="250" FontSize="14" Margin="0 20 0 0" Click="EditEmployeeButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="20">Сохранить изменения</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
