<Window x:Class="books.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Изменение товара" MinHeight="450" MinWidth="800">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="400">
            <TextBlock FontSize="20" Foreground="#D1E8E2" HorizontalAlignment="Center" VerticalAlignment="Center">Изменение товара</TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Название</TextBlock>
                <TextBox Name="nameInputTextBox" FontSize="14" Height="20" Width="500"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Тип товара</TextBlock>
                <ComboBox Name="typeInputComboBox" FontSize="14" Height="30" Width="250"></ComboBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Цена продажи</TextBlock>
                <TextBox Name="salePriceInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Цена поставщика</TextBlock>
                <TextBox Name="providerPriceInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <Button Name="EditProductButton" Height="50" Width="250" FontSize="14" Margin="0 20 0 0" Click="EditProductButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="20">Сохранить изменения</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
