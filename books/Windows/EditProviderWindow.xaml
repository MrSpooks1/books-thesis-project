<Window x:Class="books.EditProviderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Изменение информации о поставщике" MinHeight="550" MinWidth="800">
    <Grid  Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="500">
            <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D1E8E2">Изменение информации о поставщике</TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1" Margin="20">
            <StackPanel >
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Имя</TextBlock>
                <TextBox Name="nameInputTextBox" FontSize="14" Height="20" Width="500"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Тип поставщика</TextBlock>
                <ComboBox Name="providerTypeInputComboBox" FontSize="14" Height="30" Width="250">
                    <ComboBoxItem>Компания</ComboBoxItem>
                    <ComboBoxItem>Независимый автор</ComboBoxItem>
                </ComboBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Номер телефона</TextBlock>
                <TextBox Name="phoneNumberInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Электронная почта</TextBlock>
                <TextBox Name="emailInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <TextBlock FontSize="14" Width="250" TextAlignment="Center" Margin="0 20 0 0" Foreground="#D1E8E2">Почтовый адрес</TextBlock>
                <TextBox Name="postalCodeInputTextBox" FontSize="14" Height="20" Width="250"></TextBox>
                <Button Name="EditProviderButton" Height="50" Width="250" FontSize="14" Margin="0 20 0 0" Click="EditProviderButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="20">Сохранить изменения</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
