<Window x:Class="books.EmployeeViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Просмотр информации о сотрудниках" MinHeight="450" MinWidth="600" >
    <Grid  Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="500">
            <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D1E8E2">Просмотр информации о сотрудниках</TextBlock>
        </Viewbox>
        <ListBox Name="employeeListBox" Grid.Row="1" MouseDoubleClick="employeeListBox_MouseDoubleClick" Margin="10" Background="#D1E8E2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" Text="{Binding Path=FullName}"></TextBlock>
                        <TextBlock FontSize="18" Text="{Binding Path=PhoneNumber}"></TextBlock>
                        <TextBlock FontSize="18" Text="{Binding Path=Position}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Viewbox Grid.Row="2" Margin="20">
            <Button Name="openAddEmployeeFormButton" Height="60" Width="250" Click="openAddEmployeeFormButton_Click"  Background="#5CDB95">
                <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center">Зарегистрировать нового сотрудника</TextBlock>
            </Button>
        </Viewbox>
    </Grid>
</Window>
