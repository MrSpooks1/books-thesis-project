<Window x:Class="books.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books" xmlns:Control="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        mc:Ignorable="d"
        Title="Книжки" MinHeight="650" MinWidth="600" Width="1000">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <!--<RowDefinition Height="1.5*"></RowDefinition>-->
            <RowDefinition Height="1.4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Viewbox>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2C3531">
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="14" Margin="5 7 5 5" Foreground="#D1E8E2">Наименование товара</TextBlock>
                    <Control:AutoCompleteBox FontSize="14" Height="30" Width="150" Name="productNameAutoCompleteBox" Margin="5 0 5 5"></Control:AutoCompleteBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="14" Margin="5 7 5 5"  Foreground="#D1E8E2">Количество товаров</TextBlock>
                    <TextBox FontSize="14" Height="30" Width="150" Name="productCountTextBox" Margin="5 0 5 5"></TextBox>
                </StackPanel>
                <Button Name="addProductButton" Width="165" Height="50" Click="addProductButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="16">Добавить в корзину</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>

        <!--<StackPanel Margin="5">
            <StackPanel >
                <TextBlock Name="employeeNameViewTextBlock" FontSize="14"></TextBlock>
                <TextBlock Name="outletAddressViewTextBlock" FontSize="14"></TextBlock>
            </StackPanel>
        </StackPanel>-->

        <Viewbox Grid.Column="1" Grid.Row="2" VerticalAlignment="Top">
            <StackPanel>
                <Button Name="ConfirmSaleButton" MinWidth="250" MinHeight="60" Click="ConfirmSaleButton_Click" Background="#5CDB95" Margin="0 40">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="23">Перейти к оплате</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Background="#BBBBBB">
            <Viewbox MaxHeight="180">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <Button Height="50" Width="140" Name="openShipmentRegistrationFormButton" FontSize="14" Click="openShipmentRegistrationFormButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Зарегистрировать поставку</TextBlock>
                    </Button>
                    <Button Height="50" Width="140"  Name="openOutletProductsInfoFormButton" FontSize="14" Click="openOutletProductsInfoFormButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Информация о товарах</TextBlock>
                    </Button>
                    <Button Height="50" Width="140"  Name="openSalesInfoFormButton" FontSize="14" Click="openSalesInfoFormButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Совершенные операции</TextBlock>
                    </Button>
                    <Button Height="50" Width="140"  Name="openEmployeeInfoFormButton" FontSize="14" Click="openEmployeeInfoFormButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Информация о сотрудниках</TextBlock>
                    </Button>
                    <Button Height="50" Width="140"  Name="openProviderInfoFormButton" FontSize="14" Click="openProviderInfoFormButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Информация о поставщиках</TextBlock>
                    </Button>
                    <Button Height="50" Width="140"  Name="OpenSettingsButton" FontSize="14" Click="OpenSettingsButton_Click" Background="#CCCCCC">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Настройки</TextBlock>
                    </Button>
                </StackPanel>
            </Viewbox>
        </StackPanel>
       

        <ListBox Name="mainListBox" Margin="10" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" MouseDoubleClick="mainListBox_MouseDoubleClick" Background="#D1E8E2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" Text="{Binding Path=Name}"></TextBlock>
                        <TextBlock FontSize="18">
                            <Run>
                                Количество:
                            </Run>
                            <Run Text="{Binding Path=Count}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="18">
                            <Run>Стоимость:</Run>
                            <Run Text="{Binding Path=SalePrice}"></Run>
                            <Run>руб.</Run>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Grid.RowSpan="2" Background="#D1E8E2" Margin="5">
            <TextBlock FontSize="18">Последний добавленный товар:</TextBlock>
            <ListBox Name="productInfoListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="18" Text="{Binding Path=Name}"></TextBlock>
                            <TextBlock FontSize="18">
                    <Run>Стоимость:</Run>
                    <Run Text="{Binding Path=SalePrice}"></Run>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock FontSize="14" Name="sumCostViewTextBlock" Width="300" TextAlignment="Center" Height="20" Grid.Row="2" Grid.Column="1"></TextBlock>
        </StackPanel>
        

    </Grid>
</Window>
