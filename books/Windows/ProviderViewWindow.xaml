<Window x:Class="books.ProviderViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Просмотр информации о поставщиках" MinHeight="450" MinWidth="800">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="500">
            <TextBlock FontSize="20" Foreground="#D1E8E2" HorizontalAlignment="Center" VerticalAlignment="Center">Просмотр информации о поставщиках</TextBlock>
        </Viewbox>
        <ListBox Name="providersListBox" Grid.Row="1" MouseDoubleClick="providersListBox_MouseDoubleClick" Background="#D1E8E2" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" Text="{Binding Path=Name}"></TextBlock>
                        <TextBlock FontSize="18" DataContext="{Binding Path=ProviderType}" Text="{Binding Path=Type}"></TextBlock>
                        <TextBlock FontSize="18">
                    <Run>Номер телефона:</Run>
                    <Run Text="{Binding Path=PhoneNumber, TargetNullValue=не указан}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="14" >
                    <Run>Электронная почта:</Run>
                    <Run Text="{Binding Path=EmailAddress, TargetNullValue=не указана}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="14" >
                    <Run>Почтовый адрес:</Run>
                    <Run Text="{Binding Path=PostalCode, TargetNullValue=не указан}"></Run>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Viewbox Grid.Row="2" Margin="5">
            <Button Name="openAddProviderFormButton" Height="60" Width="250" FontSize="14" Click="openAddProviderFormButton_Click"  Background="#5CDB95">
                <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center">Зарегистрировать нового поставщика</TextBlock>
            </Button>
        </Viewbox>
    </Grid>
</Window>
