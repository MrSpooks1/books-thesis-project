<Window x:Class="books.SalesViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books"
        mc:Ignorable="d"
        Title="Просмотр информации о совершенных операциях" MinHeight="450" MinWidth="800">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox MaxWidth="500">
            <TextBlock FontSize="20" Foreground="#D1E8E2" HorizontalAlignment="Center" VerticalAlignment="Center">Просмотр информации о совершенных операциях</TextBlock>
        </Viewbox>
        
        <ListBox Name="salesListBox" Grid.Row="1" MouseDoubleClick="salesListBox_MouseDoubleClick" Background="#D1E8E2" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18">
                            <Run>Номер чека:</Run>  
                            <Run Text="{Binding Path=ReceiptNumber}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="18">
                            <Run>Общая сумма:</Run>
                            <Run Text="{Binding Path=Summ}"></Run>
                            <Run>руб.</Run>
                        </TextBlock>
                        <TextBlock FontSize="18" >
                            <Run>Дата и время:</Run>
                            <Run Text="{Binding Path=DateTime}"></Run>
                        </TextBlock>
                        <TextBlock FontSize="18" >
                            <Run>Метод оплаты:</Run>
                            <Run DataContext="{Binding Path=PaymentMethod}" Text="{Binding Path=Method}"></Run>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
