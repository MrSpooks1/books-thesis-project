<Window x:Class="books.ShipmentRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:books" xmlns:Control="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        mc:Ignorable="d"
        Title="Регистрация поставки" Height="450" Width="800">
    <Grid Background="#2C3531">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.35*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Background="#2C3531">
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="14" Margin="5 7 5 5" Foreground="#D1E8E2">Наименование товара</TextBlock>
                    <Control:AutoCompleteBox FontSize="14" Height="30" Width="350" Name="productNameAutoCompleteBox" Margin="5 0 5 5"></Control:AutoCompleteBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="14" Margin="5 7 5 5"  Foreground="#D1E8E2">Количество товаров</TextBlock>
                    <TextBox FontSize="14" Height="30" Width="150" Name="productCountTextBox" Margin="5 0 5 5"></TextBox>
                </StackPanel>
                <Button Name="addProductButton" Width="200" Height="50" Click="addProductButton_Click" Background="#5CDB95">
                    <TextBlock FontSize="18">Добавить в список</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>

        <Viewbox Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock FontSize="14" Margin="5 7 5 5" Foreground="#D1E8E2">Поставщик</TextBlock>
                    <ComboBox Name="providersSelectComboBox" Width="250"></ComboBox>
                </StackPanel>
                <Button Name="confirmRegistration" Width="200" Height="70" Click="confirmRegistration_Click" Background="#5CDB95" Margin="20">
                    <TextBlock FontSize="20" TextWrapping="Wrap" TextAlignment="Center">Подтвердить регистрацию</TextBlock>
                </Button>
            </StackPanel>
        </Viewbox>
        
        
        <ListBox Name="mainListBox" Grid.Row="0" Grid.Column="0" Margin="15" Grid.RowSpan="2" Background="#D1E8E2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" Text="{Binding Path=Name}"></TextBlock>
                        <TextBlock FontSize="18">
                    <Run>
                        Количество:
                    </Run>
                    <Run Text="{Binding Path=Count}"></Run>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Background="#D1E8E2" Margin="10">
            <TextBlock FontSize="18">Последний добавленный товар:</TextBlock>
            <ListBox Name="productInfoListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="18" Text="{Binding Path=Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
